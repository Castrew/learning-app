{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext", "es2020"],
    "baseUrl": ".",
    "paths": {
      "components/": ["./components/*"],
      "project/": ["./project/*"],
      "@core/*": ["./core/*"],
      "@common/*": ["./webapp/components/common/*"],
      "@fundamentals": ["./webapp/components/common/fundamentals/"],
      "@elements": ["./webapp/components/elements"],
      "@elements/*": ["./webapp/components/elements/*"],
      "@modules/*": ["./webapp/components/modules/*"]
    },
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": false
  },
  "exclude": ["node_modules", "mobile", "package.json"],
  "include": [
    "webapp/*",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "types/global.d.ts",
    "components/extras/CookiePolicy.js",
    "components/base/forms/Tabs.js",
    "components/extras/PanelSearch.js",
    "core/providers/WithSetValue.js",
    "core/providers/_hocTemplate.js",
    ".next/types/**/*.ts"
  ],
  "types": ["react/next", "react-dom/next", "webrtc"]
}
